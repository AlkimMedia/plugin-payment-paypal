<script type="text/javascript">

document.addEventListener('historyPaymentMethodChanged', e => {
for(let property in e.detail.newOrder.order.properties){
  if(e.detail.newOrder.order.properties[property].typeId === 3){
    if (e.detail.newOrder.order.properties[property].value == {{ typeId }}) {
      document.getElementById("reinitPayPal-" + e.detail.oldOrder.order.id).style.display = "block";
      document.getElementById("reinitPayPal-" + e.detail.oldOrder.order.id).style.marginTop = ".5rem";
    }else {
      document.getElementById("reinitPayPal-" + e.detail.oldOrder.order.id).style.display = "none";
      document.getElementById("reinitPayPal-" + e.detail.oldOrder.order.id).style.marginTop = "0";
    }
  }
}

});

</script>
