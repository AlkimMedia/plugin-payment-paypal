<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

<div id="modalPayPalInstallmentCheck" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="cmp cmp-checkout-sidebar">
                    <h4>Ratenzahlung powered by PayPal überprüfen</h4>
                    <hr>
                    <table>
                        <tr>
                            <th>Warenwert (Brutto)</th>
                            <td>{{ basketItemAmount }}</td>
                        </tr>
                        <tr>
                            <th>Versandkosten (Brutto)</th>
                            <td>{{ basketShippingAmount }}</td>
                        </tr>
                        <tr>
                            <th>Gesamtsumme (Netto)</th>
                            <td>{{ basketAmountNet }}</td>
                        </tr>
                        <tr>
                            <th>Gesamtsumme (Brutto)</th>
                            <td>{{ basketAmountGro }}</td>
                        </tr>
                        <tr>
                            <th>Finanzierungskosten</th>
                            <td>{{ financingCosts }}</td>
                        </tr>
                        <tr>
                            <th>Gesamtbetrag ( mit Finanzierungskosten)</th>
                            <td><strong>{{ totalCostsIncludeFinancing }}</strong></td>
                        </tr>
                    </table>
                </div>
                <a href="/payment/payPal/checkoutCancel/installment">
                    <button class="btn btn-error btn-block" :disabled="waiting || waitingForInput">
                        <i class="fa fa-cancel" aria-hidden="true"></i>Abbruch
                    </button>
                </a>
                <a href="/payment/payPal/checkoutSuccess/installment?paymentId={{ paymentId }}&PayerID={{ payerId }}">
                    <button class="btn btn-primary btn-block" :disabled="waiting || waitingForInput">
                        <i class="fa fa-arrow-right" aria-hidden="true"></i> {{ trans("PluginCeres::Template.orderBuyNow") }}
                    </button>
                </a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    $( document ).ready(function() {
        $("#modalPayPalInstallmentCheck").modal("show");
    });
</script>